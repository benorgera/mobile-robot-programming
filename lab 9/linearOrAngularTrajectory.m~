classdef linearOrAngularTrajectory < handle
    methods(Static = true)
        
        function ref = moveRelDist(dist, doPlot)
            ref = trapezoidalStepReferenceControl(0.25, 0.5, abs(dist), ...
                 dist / abs(dist), 0);
        end
        
        function ref = turnRelAngle(dist, doPlot)
            ref = trapezoidalStepReferenceControl(0.25, 0.5, abs(dist), ...
                 dist / abs(dist), 0);
        end
    end
end